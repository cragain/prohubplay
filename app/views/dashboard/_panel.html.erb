<div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Staff Workflow- <%= User.find(current_user.other_staff_1).user_name %></h3>
      </div>
      <div class="panel-body" style="min-height: 300px; max-height: 300px; overflow-y: scroll; ">
        <table class="table">
          <thead>
            <tr>
              <th><%= "Client Name" %></th>
              <th><%= "Business Name" %></th>
              <th><%= "Task Name" %></th>
              <th><%= "Task Due" %></th>
            </tr>
          </thead>
          <tbody>
          <% Task.select { |tasks| tasks.task_assigned_to == current_user.other_staff_1 && tasks.task_due < Time.now}.each do |task| %>
            <tr>
              <td><%= Client.find(task.client_id).client_name %> </td>
              <td><%= Client.find(task.client_id).business_name %></td>
              <td><%= link_to task.task_name, task %></td>
               <td><%= task.task_due.strftime("%m/%d/%Y") %></td>
              <td><% link_to "Task Detail", task, :class => "btn btn-default" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
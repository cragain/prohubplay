<div class="container-fluid">
  <div class="row row-under">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-8">
      <h2>Client Detail</h2>
    </div>
    <div class="col xs-12 col-sm-9 col-md-6 col-lg-4">
    <%= link_to "Client List", clients_path, class: "btn btn-primary" %>
    <%= link_to "Edit Client", edit_client_path(@client), class: "btn btn-success" %>
    <%= link_to "Delete Client", client_path(@client), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?"}  %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Client Contact Information</h3>
      </div>
      <div class="panel-body">
        <div class="col-md-6">
          <div class="col-md-4">
            <h5>Client Name:</h5>
          </div>
          <div class="col-md-6">
            <h5><%= @client.client_name %></h5>
          </div>
        </div> 
        <div class="col-md-6">
          <div class="col-md-6">
            <h5>Business Name:</h5>
            <h5>Business Type:</h5>
          </div>
          <div class="col-md-6">
            <h5><%= @client.business_name %></h5>
            <h5><%= @client.business_type %></h5>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-sm-12 col-med-6 col-lg-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Recent Emails</h3>
      </div>
      <div class="panel-body">
        
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Client Schedules</h3>
      </div>
      <div class="panel-body">
        <h5>Bookkeeping Schedule: &nbsp; &nbsp; <%= @client.bookkeeping_schedule %></h5>
        <h5>Payroll Schdule: &nbsp; &nbsp;<font color="#3291B5"><%= @client.payroll_schedule %></font></h5>
        <h5>Business Tax Return: &nbsp; &nbsp;
        <% if @client.business_type == 'Sole Proprietor' %>
          Sole Proprietor | Schedlue C
        <% elsif @client.business_type.downcase == 'partnership' %>
          Partnership | Form 1065
        <% else %>
          S-corporation | Form 1120S
        <% end %></h5>

      </div>
    </div>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Tax Planner</h3>
      </div>
      <div class="panel-body">
        
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Client Documents</h3>
      </div>
      <div class="panel-body">
        
      </div>
    </div>
  </div>
</div>


